<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/reserv_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ID"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/reserv_preco"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Preço"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/reserv_es"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="E/S"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/reserv_tipoid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tipo + ID"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/reserv_lotacaoid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lotação + ID"
            android:textSize="20dp" />
    </LinearLayout>

</LinearLayout>